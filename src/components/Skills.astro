---
import {
  siAstro,
  siReact,
  siTailwindcss,
  siJavascript,
  siTypescript,
  siWordpress,
  siWoocommerce,
  siNodedotjs,
  siMysql,
  siPostgresql,
  siGit,
  siGithub,
} from "simple-icons";

const skillIcons = [
  { label: "Astro", icon: siAstro },
  { label: "React", icon: siReact },
  { label: "Tailwind", icon: siTailwindcss },
  { label: "JavaScript", icon: siJavascript },
  { label: "TypeScript", icon: siTypescript },
  { label: "WordPress", icon: siWordpress },
  { label: "WooCommerce", icon: siWoocommerce },
  { label: "Node.js", icon: siNodedotjs },
  { label: "MySQL", icon: siMysql },
  { label: "PostgreSQL", icon: siPostgresql },
  { label: "Git", icon: siGit },
  { label: "GitHub", icon: siGithub },
];
---

<section id="skills" class="max-w-6xl mx-auto px-6 py-10">
 

  <div
    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-10 place-items-center"
  >
    {skillIcons.map(({ label, icon }) => (
      <div class="group flex flex-col items-center gap-3">
        <div
          class="flex h-16 w-16 items-center justify-center rounded-2xl bg-gray-50 transition
                 shadow-sm group-hover:bg-white group-hover:shadow-md"
        >
          <svg
            viewBox="0 0 24 24"
            class="h-9 w-9 transition duration-300 grayscale group-hover:grayscale-0"
            role="img"
            aria-label={label}
          >
            <title>{label}</title>
            <path d={icon.path} fill={`#${icon.hex}`} />
          </svg>
        </div>
        <span class="text-xs font-medium text-gray-600">{label}</span>
      </div>
    ))}
  </div>
</section>
